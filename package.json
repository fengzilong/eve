{
  "name": "pulse",
  "version": "0.1.0",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "dev": "webpack -w",
    "precommit": "npm test"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!**/node_modules/**"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "typescript-babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "/__test__/.*\\.test\\.(js|ts)$"
  },
  "author": "fengzilong <fengzilong1992@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "coveralls": "^2.11.16",
    "husky": "^0.13.1",
    "jest-cli": "^18.1.0",
    "ts-loader": "^2.0.0",
    "typescript": "^2.1.6",
    "typescript-babel-jest": "^1.0.1",
    "webpack": "^1.14.0"
  }
}
